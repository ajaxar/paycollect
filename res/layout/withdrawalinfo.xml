<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" 
    android:background="@drawable/background">
	
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        
        <!-- Header starts here -->
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient"
            android:paddingTop="5dip"
           	android:layout_alignParentTop="true">
            <!-- logo starts -->
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:src="@drawable/paycollectlogo"/>
            <!-- logo ends -->
            
        </LinearLayout>
        <!-- header ends here -->
        
        <!-- footer starts here -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/footer_repeat"
            android:layout_alignParentBottom="true"
            />
        <!-- footer ends here -->
        
        <!-- login form starts -->
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@+id/header"
            android:layout_marginBottom="20dip"
            android:layout_centerInParent="true">
            
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Withdrawal Details"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
            
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transid"
                android:padding="10dip"
                android:textStyle="bold"/>
            
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transdate"
                android:padding="10dip"
                android:textStyle="bold"/>
            
            <TextView android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:id="@+id/transamt"
                android:padding="10dip"
                android:textStyle="bold"/>
            
            <TextView android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:id="@+id/withdawaltype"
                android:padding="10dip"
                android:textStyle="bold"/>
            
            <Button android:id="@+id/print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="20dip"
                android:layout_gravity="center"
                android:background="@drawable/printbutton"
                />
        </LinearLayout>
        <!-- login form ends -->
        
    </RelativeLayout>
    
</ScrollView>
